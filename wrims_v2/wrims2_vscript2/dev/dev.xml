<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="dev" name="Create WVscript jar">

	<target name="dev" depends="Clean_files, Build_wvscript_jar">

		<echo message="Finish dev" />
		
	</target>

	<target name="Clean_files" >
		<echo message="Cleaning files" />
		<delete file="../lib/misc/*.jar"/>
	</target>

	<target name="Build_wvscript_jar" >


		<echo message="Generate version file" />
		<exec executable="svnversion" outputproperty="svnversion"/>
	    <propertyfile file="../bin_dev/version.props"
	        comment="This file is automatically generated - DO NOT EDIT">        
	        <entry key="buildtime" value="${builtat}"/>
	        <entry key="svn" value="${svnversion}"/>
	    </propertyfile>
		<echo message="SVN: ${svnversion}"/>
		
		<echo message="Building wvscript.jar" />

		<jar destfile="../lib/misc/wvscript.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Class-Path" value="."/>
			</manifest>
			<fileset dir="../bin_dev">
				<include name="wvscript/**/*.class"/>
				<include name="version.props"/>
				<exclude name="**/*.g"/>
			</fileset>
			<zipfileset excludes="META-INF/*.SF" src="../../wrims_v2/wrims_v2/src/wrimsv2/lib/antlr-runtime-3.2.jar"/>
		</jar>
		
		<echo message="Finished Build_scripting_jar" />

	</target>


</project>
